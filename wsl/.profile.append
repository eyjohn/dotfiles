# Set display
export DISPLAY="0:0"

# WSL doesn't set umask
umask 022

# Start SSH Agent
if [ -z "$SSH_AUTH_SOCK" ] ; then
    eval `ssh-agent -s`
fi

# Start gnome-terminal by default
if ! pgrep gnome-terminal; then
  gnome-terminal
fi

# Start SSH if we havent already
if ! pgrep sshd; then
  sudo /usr/local/bin/start_ssh
fi
